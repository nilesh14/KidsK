<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_product_details"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/relFixedCartBar"/>

    <LinearLayout
        android:id="@+id/relFixedCartBar"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/add_to_cart_white">


        <ImageView
            android:id="@+id/imgWishList"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:padding="14dp"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:src="@drawable/wishlist"/>

        <View
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:background="@color/separater_grey"></View>

        <ImageView
            android:id="@+id/imgShare"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:padding="14dp"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:src="@drawable/ic_1441724218_button_share"/>
        <View
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:background="@color/separater_grey"></View>

        <ImageView
            android:id="@+id/imgMinus"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:padding="14dp"
            android:layout_weight="2"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:src="@drawable/ic_minus"/>

        <TextView
            android:id="@+id/txtQuantity"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:inputType="number"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/bg_white_border_grey_no_stroke"
            android:text="1"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/imgPlus"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:padding="14dp"
            android:layout_weight="2"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:src="@drawable/ic_add"/>

        <Button
            android:id="@+id/btnAddToCart"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="7"
            android:background="@drawable/bg_orange_no_stroke_no_corner"
            android:text="ADD TO CART"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/white"/>

    </LinearLayout>

</RelativeLayout>